@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@model IEnumerable<SocialMedia.Models.Database.Post>


<head>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">

</head>
<div class="main">
    <div class="header">
        <div class="search">
            <div class="search-bar">
                <i class="fa fa-search"></i>
                <input type="text" placeholder="Search" class="input">
            </div>
            <div class="filter-bar">
                <i class="fa-solid fa-angle-down"></i>
                <input type="text" placeholder="Filter" class="input">
            </div>
        </div>
    </div>
    <div class="container-post">
        <div class="addPostIcon">
            <a asp-action="Create" asp-controller="Post"><img src="~/src/images/AddPostIcon.svg"></a>
        </div>
        @foreach (var post in Model)
        {
            <div class="post">
                <div class="card-post">
                    <img src="@post.Image" alt="activity" class="activity">
                    <div class="content">
                        <div class="post-header">
                            <div class="date">
                                <h3 class="month">@post.Date.ToString("MMM").ToUpper()</h3>
                                <h3 class="day">@post.Date.Day</h3>
                                <h3 class="year">@post.Date.Year</h3>
                            </div>
                            <div class="topic">
                                <h1>@post.Title</h1>
                                <p>@post.Time.ToString("HH:mm"), @post.Location</p>
                            </div>
                        </div>
                        <div class="description">
                            <p>@post.Content</p>
                            <div class="owner">
                                <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg"
                                    alt="" id="owner-profile">
                                <span>@post.User.Name</span>
                            </div>
                            <div class="action">
                                <button class="join-button" id="btn">join activity</button>
                                <script src="~/lib/button.js"></script>
                                <div class="likes">
                                    <img src="~/src/images/LikeIcon.svg" class="icon" id="like">
                                    <span>15</span>
                                </div>
                                <div class="participant">
                                    <img src="~/src/images/People_in_postcardIcon.svg" class="icon">
                                    <span>8/10</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
        <div class="post">
            <div class="card-post">
                <img src="https://cdn.britannica.com/51/190751-050-147B93F7/soccer-ball-goal.jpg" alt="activity"
                    class="activity">
                <div class="content">
                    <div class="post-header">
                        <div class="date">
                            <h3 class="month">FEB</h3>
                            <h3 class="day">26</h3>
                            <h3 class="year">2024</h3>
                        </div>
                        <div class="topic">
                            <h1>เตะบอลกันครับพี่ๆ</h1>
                            <p>18:00 - 20:00, KMITL</p>
                        </div>
                    </div>
                    <div class="description">
                        <p>เตะบอลวันอังคารที่ 27 ตอนเย็นที่สนามมอครับ ใครสนใจก็มาร่วมด้ายยย ค่าสนามชั่วโมงละ 1500 บาท
                            เราเล่น 2 ชั่วโมงตกคนละ 200 บาทครับบ มีเพื่อนชวนเพื่อนมาได้โล้ดดด</p>
                        <div class="owner">
                            <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg"
                                alt="" id="owner-profile">
                            <span>Boom Za</span>
                        </div>
                        <div class="action">
                            <button class="join-button" id="btn">join activity</button>
                            <!-- <script src="~/lib/button.js"></script> -->
                            <div class="likes">
                                <img src="~/src/images/LikeIcon.svg" class="icon" id="like">
                                <span>15</span>
                            </div>
                            <div class="participant">
                                <img src="~/src/images/People_in_postcardIcon.svg" class="icon">
                                <span>8/10</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
    

@section Scripts {
        <script>
            $(document).ready(function () {
                $('.like-button').click(function () {
                    var button = $(this); // The clicked button
                    var postId = button.data('postid'); // Retrieve the post ID from the button's data attribute
                    $.ajax({
                        url: '@Url.Action("LikePost", "PostLike")', // The URL to the LikePost action
                        type: 'POST',
                        data: { postId: postId }, // Send the post ID as data
                        success: function (result) {

                            console.log(result)
                            button.find('img').attr('src', result.liked ? '@Url.Content("~/src/images/LikedIcon.svg")' : '@Url.Content("~/src/images/LikeIcon.svg")');
                            button.siblings('span').text(result.likeCount);
                            console.log("Post liked successfully");
                        },
                        error: function (xhr, status, error) {
                            // Handle errors
                            console.log("Error liking post: " + error);
                        }
                    });
                });
            });
        </script>
    }

@{
    ViewData["Title"] = "Group Page";
    Layout = "~/Views/Shared/_LayoutGroup.cshtml";
}

@model List<SocialMedia.Models.Database.Group>

<head>
    <link rel="stylesheet" href="~/css/group.css" asp-append-version="true">
</head>
<a asp-action="create" asp-controller="Group">
    <img src="~/src/images/Creategoupicon.svg" class="create-post-button">
</a>
<div class="pop-up">
    <div class="header-popup">
        <h2>Members</h2>
        <img src="~/src/images/Cancleicon.svg" alt="canclelogo" id="cancle" onclick="openmembers()">
    </div>
    @foreach(var group in Model)
    {
        if (group.Members.Any(m => m.GroupId == group.GroupId))
        {
            <div class="group-members">
                <div class="members">
                    <img src="@group.User.Image" alt="imagemembers" id="group-poster-img">
                    <span>@group.User.Name</span>
                </div>
            </div>
        }
    }
</div>
     

<div class="group-element">
    <div class="header">
        <div class="search">
            <div class="search-bar">
                <i class="fa fa-search"></i>
                <input type="text" placeholder="Search" id="search-input">
            </div>
            <div class="filter-bar">
                <i class="fa-solid fa-angle-down"></i>
                <input type="text" placeholder="Filter" id="filter-input">
            </div>
        </div>
    </div>

    <div class="Recomended-Group-header">
        <a asp-action="index" asp-controller="Group">
            <img src="~/src/images/Backicon.svg" class="back-recommend">
        </a>
        <h1>Recomended Groups</h1>

    </div>
    <div class="container-rec">
        @foreach (var group in Model)
        {
        @using System.Security.Claims
            @if (group.Members.All(l => l.UserId != (int.TryParse(User.FindFirstValue(ClaimTypes.NameIdentifier), out int
           userId) ? userId : 0)))
            {
                <div class="post-rec">
                    <div class="card-post-rec">
                        <h1 id="section">@group.Name</h1>
                        <p id="section-content">@group.Description</p>
                        <div class="activity-image">
                            <img src="@group.Image" alt="activity" id="activity1">
                        </div>
                        <div class="test2">
                            <div class="group-poster">
                                <img src="@group.User.Image"
                                    alt="" id="group-poster-img">
                                <span>@group.User.Name</span>
                            </div>

                            <div class="group-of-button">
                                <i class="fa-regular fa-user"></i>
                                <span>@group.Members.Count</span>
                                <button class="group-rec-button" GroupId="@group.GroupId" onclick="">join group</button>
                            </div>
                        </div>
                    </div>

                </div>
            }
        }

    </div>
</div>
@section scripts {
    <script>
        function viewgrouponclick(groupId) {
            window.location.href = '@Url.Action("Details", "Group")' + '/' + groupId;
        }
    </script>
    <script>
        $(document).ready(function () {
            $("button.group-rec-button").click(function () {
                event.preventDefault();
                var button = $(this);
                var groupId = button.attr("GroupId");

                $.ajax({
                    type: "POST",
                    url: '/Group/JoinGroup/' + groupId,
                    data: {},
                    success: function (data) {
                        if (data.success) {
                            button.text("View group")
                            .addClass("group-button")
                            .removeClass("group-rec-button")
                            .attr("onclick", "viewgrouponclick(" + groupId + ")");
                        }
                        else {
                            alert("Failed to Join Group: " + data.message);
                        }
                    },
                    error: function () {
                        alert("An error occurred while joining the group. Please try again later.");
                    }
                });
            });
        });
    </script>

    <script src="~/lib/testfile.js"></script>

}

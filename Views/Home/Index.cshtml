@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@model IEnumerable<SocialMedia.Models.Database.Post>


<head>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">

</head>
<div class="main">
    <div class="header">
        <div class="search">
            <div class="search-bar">
                <i class="fa fa-search"></i>
                <input type="text" placeholder="Search" id="search-input">
            </div>
            <div class="filter-bar">
                <i class="fa-solid fa-angle-down"></i>
                <input type="text" placeholder="Filter" id="filter-input">
            </div>
        </div>
    </div>
    <div class="container-post">
        @foreach (var post in Model)
        {

            <div class="post">
                <div class="card-post">
                    <img src="@post.Image" alt="activity" class="activity">
                    <div class="content">
                        <div class="post-header">
                            <div class="date">
                                <h3 class="month">@post.Date.ToString("MMM").ToUpper()</h3>
                                <h3 class="day">@post.Date.Day</h3>
                                <h3 class="year">@post.Date.Year</h3>
                            </div>
                            <div class="topic">
                                <h1>@post.Title</h1>
                                <p>@post.Time.ToString("HH:mm"), @post.Location</p>
                            </div>
                        </div>
                        <div class="description">
                            <p>@post.Content</p>
                            <div class="owner">
                                <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg"
                                    alt="" id="owner-profile">
                                <span>@post.User.Name</span>
                            </div>
                            <div class="action">
                                <button class="join-button" id="btn">join activity</button>
                                <script src="~/lib/button.js"></script>
                                <div class="likes">
                                    <button data-postid="@post.PostId" class="like-button">

                                        @using System.Security.Claims

                                        @if(post.PostLikes.Any(l => l.UserId == (int.TryParse(User.FindFirstValue(ClaimTypes.NameIdentifier), out int userId) ? userId : 0)))
                                        {
                                            <img src="@Url.Content("~/src/images/LikedIcon.svg")" class="icon" >
                                            
                                        }
                                        else
                                        {
                                            <img src="@Url.Content("~/src/images/LikeIcon.svg")" class="icon" >
                                        }

                                    </button>
                                    <span class="likeCount">@post.PostLikes.Count
                                        <div class="dropdownLike"">
                                            <div class="member">
                                                <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg">
                                                <h5>oakoakoak</h5>
                                            </div>
                                            <div class="member">
                                                <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg">
                                                <h5>oakoakoak</h5>
                                            </div>
                                            <div class="member">
                                                <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg">
                                                <h5>oakoakoak</h5>
                                            </div>
                                        </div>
                                    </span>
                                </div>
                                <div class="participant">
                                    <img src="@Url.Content("~/src/images/People_in_postcardIcon.svg")" class="icon">
                                    <span class="participantCount">8/10
                                        <div class="dropdownParticipant">
                                            <div class="member">
                                                <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg">
                                                <h5>oakoakoak</h5>
                                            </div>
                                            <div class="member">
                                                <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg">
                                                <h5>oakoakoak</h5>
                                            </div>
                                            <div class="member">
                                                <img src="https://www.thaihealth.or.th/data/content/2019/01/46598/cms/newscms_thaihealth_c_acdiprsvxz24.jpg">
                                                <h5>oakoakoak</h5>
                                            </div>
                                        </div>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
        <div class="addPostIcon">
            <a asp-action="Create" asp-controller="Post"><img src="~/src/images/AddPostIcon.svg"></a>
        </div>
    </div>
    

@section Scripts {
        <script>
            $(document).ready(function () {
                $('.like-button').click(function () {
                    var button = $(this); // The clicked button
                    var postId = button.data('postid'); // Retrieve the post ID from the button's data attribute
                    $.ajax({
                        url: '@Url.Action("LikePost", "PostLike")', // The URL to the LikePost action
                        type: 'POST',
                        data: { postId: postId }, // Send the post ID as data
                        success: function (result) {

                            console.log(result)
                            button.find('img').attr('src', result.liked ? '@Url.Content("~/src/images/LikedIcon.svg")' : '@Url.Content("~/src/images/LikeIcon.svg")');
                            button.siblings('span').text(result.likeCount);
                            console.log("Post liked successfully");
                        },
                        error: function (xhr, status, error) {
                            // Handle errors
                            console.log("Error liking post: " + error);
                        }
                    });
                });
            });
        </script>
    }

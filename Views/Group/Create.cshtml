@model SocialMedia.ViewModels.GroupViewModel
@section css {
    <link rel="stylesheet" href="~/css/group.css">
}

@{
    ViewData["Title"] = "Group Page";
    Layout = "~/Views/Shared/_LayoutGroup.cshtml";
}
<div>
    <a asp-action="index" asp-controller="Group">
        <img src="~/src/images/Backicon.svg" class="back">
    </a>
    <div class="box">
        <div class="title">
            <img src=" https://media.newyorker.com/photos/59095bb86552fa0be682d9d0/master/pass/Monkey-Selfie.jpg"
                class="profile">
            <input asp-for="Groupname" placeholder="Group Name" class="name">
        </div>
        <textarea asp-for="Description" placeholder="description..."></textarea>

        <div class="boxinput"><img src="~/src/images/Imgicon.svg">
            <input asp-for ="Image" placeholder="Add some photos" class="input">
        </div>
        <div class="btn">
            <button>create group</button>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function() {
            $(".btn button").click(function(event) {
                event.preventDefault(); // Prevent the default form submission
                var formData = {
                    Groupname: $('input[name="Groupname"]').val(),
                    Description: $('textarea[name="Description"]').val(),
                    Image:$('input[name="Image"]').val()  
                };
                // Basic validation example
                if (!formData.Groupname || !formData.Description || !formData.Image) {
                    alert("Groupname,Description and Image are required.");
                    return; // Exit the function to prevent sending the request
                }
                $.ajax({
                    type: "POST",
                    url: '/Group/CreateGroup', // Modify with your correct URL
                    contentType: "application/json",
                    data: JSON.stringify(formData),
                    success: function(response) {
                        if(response.success) {
                            alert("Group created successfully.");
                            // Optionally, redirect or clear form here
                            window.location.href = '@Url.Action("Index", "Group")'; // Adjust controller and action names as necessary
                        } else {
                            alert("Failed to create Group: " + response.message);
                        }
                    },
                    error: function(error) {
                        console.log(error);
                        alert("There was an error processing your request.");
                    }
                });
            });
        });
    </script>
}

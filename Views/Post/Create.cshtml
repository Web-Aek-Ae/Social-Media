@model SocialMedia.ViewModels.PostViewModel

@section css {
    <link rel="stylesheet" href="~/css/post.css">
}


<div>
    <a href="@Url.Action("index", "Post")">
        <img src="@Url.Content("~/src/images/Backicon.svg")" class="back">
    </a>
    <div class="box">
        <div class="title">
            <img src=" https://media.newyorker.com/photos/59095bb86552fa0be682d9d0/master/pass/Monkey-Selfie.jpg"
                class="profile">
            <input asp-for="Title" placeholder="Event Name" class="name">
        </div>

        <textarea asp-for="Content" placeholder="description..."></textarea>

        <h1>Details</h1>
        <div class="details">
            <div class="boxinput">

                <img src="@Url.Content("~/src/images/Dateicon.svg")">
                <input asp-for="Date" placeholder="Pick a date..." type="date" class="input">
            </div>
            <div class="boxinput"><img src="@Url.Content("~/src/images/Locationicon.svg")">
                <input asp-for="Location" placeholder="Location" class="input">
            </div>
            <div class="boxinput"><img src="@Url.Content("~/src/images/Timeicon.svg")">
                <input asp-for="Time" placeholder="What time ?" type="time" class="input">
            </div>
            <div class="boxinput"><img src="@Url.Content("~/src/images/Expireicon.svg")">
                <input asp-for="ExpireDate" placeholder="Expire date" type="date" class="input">
            </div>
            <div class="boxinput"><img src="@Url.Content("~/src/images/Imgicon.svg")">
                <input asp-for="Image" placeholder="Add some photos" class="input">
            </div>
            <div class="boxinput"><img src="@Url.Content("~/src/images/Peopleicon.svg")">
                <input asp-for="MaxPeople" placeholder="Max people" type="number" class="input">
            </div>
        </div>

        <div class="btn">
            <button>Post</button>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function() {
            $(".btn button").click(function(event) {
                event.preventDefault(); // Prevent the default form submission

                var formData = {
                    Title: $('input[name="Title"]').val(),
                    Content: $('textarea[name="Content"]').val(),
                    // Assuming Date and ExpireDate are in "YYYY-MM-DD" format
                    Date: $('input[name="Date"]').val(),
                    Location: $('input[name="Location"]').val(),
                    // Assuming Time is in "HH:MM" format, compatible with TimeSpan
                    Time: $('input[name="Time"]').val(),
                    ExpireDate: $('input[name="ExpireDate"]').val(),
                    Image: $('input[name="Image"]').val(),
                    MaxPeople: parseInt($('input[name="MaxPeople"]').val(), 10) // Parse as integer
                };

                // Basic validation example
                if (!formData.Title || !formData.Content) {
                    alert("Title and Content are required.");
                    return; // Exit the function to prevent sending the request
                }

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CreatePost", "Post")', // Modify with your correct URL
                    contentType: "application/json",
                    data: JSON.stringify(formData),
                    success: function(response) {
                        if(response.success) {
                            alert("Post created successfully.");
                            // Optionally, redirect or clear form here
                            window.location.href = '@Url.Action("Index", "Home")'; // Adjust controller and action names as necessary
                        } else {
                            alert("Failed to create post: " + response.message);
                        }
                    },
                    error: function(error) {
                        console.log(error);
                        alert("There was an error processing your request.");
                    }
                });
            });
        });
    </script>
}
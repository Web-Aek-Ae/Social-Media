                    type: "POST",
                    url: '/Group/JoinGroup/' + groupId,
                    data: {},
                    success: function (data) {
                        if (data.success) {
                            $("#group-rec-button").css({
                                text:"view group",
                                backgroundColor:"white",
                                border:"2px solid black"
                            })
                        }

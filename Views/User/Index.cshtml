@model IEnumerable<SocialMedia.Models.Database.User>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<h2>Users</h2>

<table>
    <thead>
        <tr>
            <th>UserId</th>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <!-- Do not display passwords in a public page -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserId</td>
            <td>@user.Name</td>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>
                <!-- Delete form -->
                <form method="post" action="@Url.Action("DeleteUser", "User", new { userId = user.UserId })" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
